  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Run Tests",
      "preLaunchTask": "Build Tests",
      "program": "${workspaceRoot}/node_modules/qunitjs/bin/qunit",
      "args": [
        "dist/commonjs/test/**/*-test.js"
      ],
      "outFiles": ["${workspaceRoot}/dist/commonjs/**/*.js"],
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}
